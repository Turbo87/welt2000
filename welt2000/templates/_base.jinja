<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>WELT2000</title>

    <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css">

    <style type="text/css">
    body {
      margin-top: 60px;
    }

    .navbar-default {
      background-color: #fff;
      border-color: #ac3;
    }

    .navbar-brand {
      padding: 9px;
    }

    .navbar-brand img {
      height: 32px;
    }

    .navbar-default .navbar-toggle,
    .navbar-default .navbar-toggle:focus {
      background-color: #ac3;
      border-color: #ac3;
    }

    .navbar-default .navbar-toggle:hover {
      background-color: #c2db6d;
      border-color: #c2db6d;
    }

    .navbar-default .navbar-toggle .icon-bar {
      background-color: #fff;
    }

    .navbar-default .navbar-collapse {
      background-color: #ac3;
      border-color: #ac3;
    }

    .navbar-default .navbar-nav > li > a {
      color: #fff;
    }

    .navbar-default .navbar-nav > li > a:hover,
    .navbar-default .navbar-nav > li > a:focus {
      color: #fff;
      background-color: #c2db6d;
    }

    .navbar-default .navbar-nav > .active > a,
    .navbar-default .navbar-nav > .active > a:hover,
    .navbar-default .navbar-nav > .active > a:focus {
      color: #3f493e;
      background-color: #fff;
    }

    @media (min-width:768px) {
      body {
        margin-left: 200px;
        margin-top: inherit;
      }

      .container {
        width: 550px;
      }

      .navbar-default {
        background-color: #ac3;
        margin-bottom: 0;
      }

      .navbar-fixed-top {
        right: auto;
        bottom: 0;
        width: 200px;
      }

      .navbar-fixed-top .container {
        width: inherit;
        padding: 0;
      }

      .navbar-header,
      .navbar-nav {
        float: none;
      }

      .navbar-brand {
        float: none;
        display: block;
        text-align: center;
        padding: 15px;
      }

      .navbar > .container .navbar-brand {
        margin-left: 0;
      }

      .navbar-brand .hidden-xs {
        display: inline !important;
      }

      .navbar-brand img {
        height: 64px;
      }

      .navbar-nav > li {
        float: none;
        text-align: right;
        margin-left: 10px;
        font-size: 20px;
      }

      .navbar-nav > li > a {
        padding-top: 10px;
        padding-bottom: 10px;
        margin-bottom: 5px;
        margin-top: 5px;
        border-radius: 10px 0 0 10px;
      }
    }

    @media (min-width:992px) {
      body {
        margin-left: 220px;
      }

      .container {
        width: 750px;
      }

      .navbar-fixed-top {
        width: 220px;
      }
    }

    @media (min-width:1200px) {
      body {
        margin-left: 250px;
      }

      .container {
        width: 920px;
      }

      .navbar-fixed-top {
        width: 250px;
      }
    }
    </style>
  </head>
  <body>
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">
            <img src="{{ url_for('static', filename='banner.png') }}" class="visible-xs">
            <img src="{{ url_for('static', filename='logo-inverted.png') }}" class="hidden-xs">
          </a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li><a href="{{ url_for('index') }}">{{ _('Home') }}</a></li>
            <li><a href="{{ url_for('not_available') }}">{{ _('News') }}</a></li>
            <li><a href="{{ url_for('contribute') }}">{{ _('Contribute') }}</a></li>
            <li><a href="{{ url_for('downloads') }}">{{ _('Downloads') }}</a></li>
            <li><a href="{{ url_for('references') }}">{{ _('References') }}</a></li>
            <li><a href="{{ url_for('faq') }}">{{ _('FAQ') }}</a></li>
          </ul>
        </div>
      </div>
    </div>

    <div class="container">
      {% block content %}{% endblock %}

      <div class="pull-right">
        <ul class="nav nav-pills">
          <li><a href="{{ url_for('contact') }}">{{ _('Contact') }}</a></li>
          <li><a href="{{ url_for('legal_terms') }}">{{ _('Legal Terms') }}</a></li>
          <li><a href="{{ url_for('rss') }}">{{ _('RSS') }}</a></li>
          <li><a href="{{ url_for('about') }}">{{ _('About') }}</a></li>
          <li>
            {% if get_locale() == 'de' -%}
            <a href="{{ url_for('lang', lang='en') }}"><img src="{{ url_for('static', filename='flags/gb.png') }}"></a>
            {%- else -%}
            <a href="{{ url_for('lang', lang='de') }}"><img src="{{ url_for('static', filename='flags/de.png') }}"></a>
            {%- endif %}
          </li>
        </ul>
      </div>

    </div>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://code.jquery.com/jquery.js"></script>
    <!-- Bootstrap -->
    <!-- Latest compiled and minified JavaScript -->
    <script src="http://netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
  </body>
</html>
